---
import { SITE_CONFIG } from "@/config";

interface Props {
  enableAds: boolean;
}

const { enableAds } = Astro.props;
const manualSlots = SITE_CONFIG.ads.manualSlots;
---

{/* Tailwind breakpoint indicator */}
<div class="fixed left-0 top-0 z-50 flex w-[30px] items-center justify-center bg-gray-200 py-[2.5px] text-[12px] font-mono uppercase text-black sm:bg-red-200 md:bg-yellow-200 lg:bg-green-200 xl:bg-blue-200 2xl:bg-pink-200 pointer-events-none">
  <span class="block sm:hidden">all</span>
  <span class="hidden sm:block md:hidden">sm</span>
  <span class="hidden md:block lg:hidden">md</span>
  <span class="hidden lg:block xl:hidden">lg</span>
  <span class="hidden xl:block 2xl:hidden">xl</span>
  <span class="hidden 2xl:block">2xl</span>
</div>

{/* Google Ads status indicator */}
<div
  class:list={[
    "fixed left-0 top-[22px] z-50 flex w-[30px] items-center justify-center py-[2.5px] text-[10px] font-mono uppercase text-white pointer-events-none",
    enableAds ? "bg-green-600" : "bg-red-600",
  ]}
  title={`Auto Ads: ${enableAds ? "on" : "off"} | Manual slots: ${manualSlots ? "on" : "off"}`}
>
  {enableAds ? (manualSlots ? "Ad" : "Au") : "â€“"}
</div>

{/* Runtime ad script detection */}
<script is:inline>
  (function() {
    function checkAdScript() {
      var el = document.querySelector('[data-dev-ads-status]');
      if (!el) return;

      var hasScript = !!document.querySelector('script[src*="adsbygoogle"]');
      var hasAdSlots = document.querySelectorAll('.adsbygoogle').length;

      el.textContent = hasScript ? (hasAdSlots + '') : '!';
      el.title = hasScript
        ? 'AdSense script loaded, ' + hasAdSlots + ' ad slot(s)'
        : 'AdSense script NOT loaded';
      el.style.backgroundColor = hasScript ? '#059669' : '#dc2626';
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', function() { setTimeout(checkAdScript, 1000); });
    } else {
      setTimeout(checkAdScript, 1000);
    }
  })();
</script>

<div
  data-dev-ads-status
  class="fixed left-0 top-[44px] z-50 flex w-[30px] items-center justify-center bg-gray-400 py-[2.5px] text-[10px] font-mono text-white pointer-events-none"
  title="Checking ad script status..."
>
  ...
</div>

---
import LogoWithLabel from "@/components/LogoWithLabel.astro";
import FacebookIcon from "@/assets/FacebookIcon.astro";
import InstagramIcon from "@/assets/InstagramIcon.astro";
import YoutubeIcon from "@/assets/YoutubeIcon.astro";
import EmailIcon from "@/assets/EmailIcon.astro";
import { colors } from "@/lib/constants";
import { SITE_CONFIG } from "@/config";

const year = new Intl.DateTimeFormat("fr-FR", { year: "numeric" }).format(
  Date.now(),
);

const socialLinks = [
  { href: "https://www.facebook.com/apprendreAvecPantouFLE", label: "Facebook", Icon: FacebookIcon },
  { href: "https://www.instagram.com/pantou_fle/", label: "Instagram", Icon: InstagramIcon },
  { href: "https://www.youtube.com/channel/UCYFLgaAWqetra1x03v7XacQ/featured", label: "YouTube", Icon: YoutubeIcon },
] as const;

const isNewsletterEnabled = SITE_CONFIG.newsletter.enabled;
---

<footer class="w-full mt-auto">
  {/* Top decorative border */}
  <div class="h-1 bg-gradient-to-r from-secondary-very-light via-primary-light to-tertiary-light"></div>

  <div class="bg-gradient-to-b from-whitish to-white">
    <div class="max-w-screen-xl mx-auto px-3 sm:px-4 lg:px-6 py-10 sm:py-14">
      {/* Top row â€” logo + newsletter side by side on md+ */}
      <div class="flex flex-col md:flex-row md:items-start gap-8 md:gap-12">
        {/* Left â€” branding + social */}
        <div class="flex flex-col gap-6 md:flex-1">
          <div class="flex items-center gap-3 sm:gap-4">
            <a href="/" class="flex-shrink-0" aria-label="Pantou-fle â€” Accueil">
              <LogoWithLabel />
            </a>
            <p class="text-sm text-gray-500 leading-snug max-w-xs">
              Le site de ressource pour apprendre le FranÃ§ais langue Ã©trangÃ¨re de
              maniÃ¨re ludique
            </p>
          </div>

          {/* Social icons */}
          <div class="flex flex-col gap-3">
            <p class="text-xs font-semibold uppercase tracking-wider text-gray-400">
              Retrouvez-nous
            </p>
            <div class="flex items-center gap-1.5">
              {socialLinks.map(({ href, label, Icon }) => (
                <a
                  href={href}
                  target="_blank"
                  rel="noreferrer"
                  aria-label={label}
                  class="inline-flex items-center justify-center w-10 h-10 rounded-xl bg-white border border-gray-100 shadow-sm hover:shadow-md hover:border-secondary-very-light hover:bg-secondary-very-light hover:scale-105 transition-all duration-200"
                >
                  <Icon color={colors["primary-dark"]} size={20} />
                </a>
              ))}
              {/* Email â€” copy to clipboard instead of mailto */}
              <div class="relative">
                <button
                  id="copy-email-btn"
                  type="button"
                  aria-label="Copier l'adresse email"
                  data-email={SITE_CONFIG.contactEmail}
                  class="inline-flex items-center justify-center w-10 h-10 rounded-xl bg-white border border-gray-100 shadow-sm hover:shadow-md hover:border-secondary-very-light hover:bg-secondary-very-light hover:scale-105 transition-all duration-200 cursor-pointer"
                >
                  <EmailIcon color={colors["primary-dark"]} size={20} />
                </button>
                <span
                  id="copy-email-tooltip"
                  class="pointer-events-none absolute -top-9 left-1/2 -translate-x-1/2 opacity-0 transition-opacity duration-200 whitespace-nowrap rounded-md bg-primary-dark text-white text-xs font-medium px-2.5 py-1.5 shadow-lg"
                  role="status"
                  aria-live="polite"
                >
                  CopiÃ© !
                </span>
              </div>
            </div>
          </div>
        </div>

        {/* Right â€” newsletter */}
        {isNewsletterEnabled && (
          <div class="rounded-2xl bg-white border border-gray-100 shadow-sm p-5 sm:p-6 md:flex-1 md:max-w-md">
            <div class="flex items-center gap-2 mb-3">
              <span class="text-2xl" aria-hidden="true">ðŸ“«</span>
              <h3 class="text-sm font-bold text-primary-dark">Newsletter</h3>
            </div>
            <p class="text-xs sm:text-sm text-gray-500 mb-4">
              Ne manquez aucune nouvelle ressource en vous abonnant !
            </p>
            <form
              id="newsletter-form"
              method="POST"
              action="/api/newsletter"
              class="flex flex-col gap-2.5"
            >
              <input
                class="w-full rounded-xl border border-gray-200 bg-whitish px-3.5 py-2.5 text-sm text-primary-dark placeholder:text-gray-400 outline-none focus:border-primary-light focus:ring-2 focus:ring-primary-light/50 transition-all"
                placeholder="PrÃ©nom (optionnel)"
                type="text"
                name="first_name"
                id="newsletter_first_name"
              />
              <div class="flex gap-2">
                <input
                  class="flex-1 rounded-xl border border-gray-200 bg-whitish px-3.5 py-2.5 text-sm text-primary-dark placeholder:text-gray-400 outline-none focus:border-primary-light focus:ring-2 focus:ring-primary-light/50 transition-all"
                  placeholder="Adresse email"
                  type="email"
                  name="email"
                  id="newsletter_email"
                  required
                />
                <button
                  type="submit"
                  id="newsletter-submit"
                  class="inline-flex items-center justify-center rounded-xl bg-primary-dark text-white px-4 py-2.5 hover:bg-primary transition-colors shadow-sm hover:shadow-md disabled:opacity-50 disabled:cursor-not-allowed"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </button>
              </div>
              <p id="newsletter-message" class="text-xs mt-1 min-h-[1.25rem]" aria-live="polite"></p>
            </form>
          </div>
        )}
      </div>

      {/* Bottom centered section â€” links + copyright */}
      <div class="mt-10 flex flex-col items-center gap-2 text-center">
        <nav class="flex items-center gap-4" aria-label="Footer">
          <a
            href="/about"
            class="text-sm text-gray-500 hover:text-primary-dark transition-colors"
          >
            Qui sommes-nous ?
          </a>
          <span class="text-gray-300" aria-hidden="true">&middot;</span>
          <a
            href="/privacy-policy"
            class="text-sm text-gray-500 hover:text-primary-dark transition-colors"
          >
            Politique de confidentialitÃ©
          </a>
        </nav>
        <p class="text-xs text-gray-400">
          &copy; {year} Pantou-fle &mdash; Tous droits rÃ©servÃ©s
        </p>
      </div>
    </div>
  </div>
</footer>

<script>
  const copyBtn = document.getElementById("copy-email-btn") as HTMLButtonElement | null;
  const tooltip = document.getElementById("copy-email-tooltip");

  copyBtn?.addEventListener("click", async () => {
    const email = copyBtn.dataset.email;
    if (!email || !tooltip) return;

    try {
      await navigator.clipboard.writeText(email);
    } catch {
      // Fallback for older browsers
      const textarea = document.createElement("textarea");
      textarea.value = email;
      textarea.style.position = "fixed";
      textarea.style.opacity = "0";
      document.body.appendChild(textarea);
      textarea.select();
      document.execCommand("copy");
      document.body.removeChild(textarea);
    }

    tooltip.style.opacity = "1";
    setTimeout(() => {
      tooltip.style.opacity = "0";
    }, 1500);
  });
</script>

<script>
  const form = document.getElementById("newsletter-form") as HTMLFormElement | null;
  const messageEl = document.getElementById("newsletter-message");
  const submitBtn = document.getElementById("newsletter-submit") as HTMLButtonElement | null;

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    if (!submitBtn || !messageEl) return;

    submitBtn.disabled = true;
    messageEl.textContent = "";
    messageEl.className = "text-xs mt-1 min-h-[1.25rem]";

    try {
      const formData = new FormData(form);
      const response = await fetch("/api/newsletter", {
        method: "POST",
        body: formData,
      });

      const data: { message?: string; error?: string } = await response.json();

      if (response.ok) {
        messageEl.textContent = data.message ?? "Inscription rÃ©ussie !";
        messageEl.className = "text-xs mt-1 min-h-[1.25rem] text-success";
        form.reset();
      } else {
        messageEl.textContent = data.error ?? "Une erreur est survenue.";
        messageEl.className = "text-xs mt-1 min-h-[1.25rem] text-error";
      }
    } catch {
      messageEl.textContent = "Une erreur est survenue. Veuillez rÃ©essayer.";
      messageEl.className = "text-xs mt-1 min-h-[1.25rem] text-error";
    } finally {
      submitBtn.disabled = false;
    }
  });
</script>

---
import { SEO } from "astro-seo";
import "@/styles/global.css";
import "@fontsource/m-plus-rounded-1c";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Aside from "@/components/Aside.astro";
import KoFiScript from "@/components/KoFiScript.astro";
import Splash from "@/components/Splash.astro";
import PromoBanner from "@/components/PromoBanner.astro";
import DevIndicator from "@/components/DevIndicator.astro";
import { AD_CLIENT } from "@/lib/constants";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  enableAds?: boolean;
  uri: string;
  pageData?: {
    activity: string;
    level: string;
  };
  availability?: Set<string>;
}

const {
  title,
  description,
  image,
  enableAds = true,
  uri,
  pageData,
  availability = new Set<string>(),
} = Astro.props;

const defaultTitle = "Pantou-fle - Français Langue Étrangère";
const metaDescription =
  description ||
  "Ressources pédagogiques gratuites pour apprendre le français langue étrangère (FLE). Activités, exercices et fiches pour tous les niveaux de A1 à C2.";
const fullTitle = title || defaultTitle;
const isDev = import.meta.env.DEV;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={fullTitle}
      description={metaDescription}
      openGraph={{
        basic: {
          title: fullTitle,
          type: "website",
          image: image || "",
        },
        optional: {
          description: metaDescription,
        },
      }}
      twitter={{
        card: "summary_large_image",
        title: fullTitle,
        description: metaDescription,
        ...(image ? { image } : {}),
      }}
    />

    {/* Google AdSense: meta verification + script */}
    <meta name="google-adsense-account" content={AD_CLIENT} />
    {
      enableAds && (
        <script
          is:inline
          async
          src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${AD_CLIENT}`}
          crossorigin="anonymous"
        />
      )
    }

    {/* Simple Analytics */}
    <script async defer src="https://scripts.simpleanalyticscdn.com/latest.js"
    ></script>
    <noscript>
      <img
        src="https://queue.simpleanalyticscdn.com/noscript.gif"
        alt=""
        referrerpolicy="no-referrer-when-downgrade"
      />
    </noscript>
  </head>
  <body class="bg-white min-h-screen flex flex-col relative overflow-x-hidden">
    {/* Decorative splash -- top-right corner of the page */}
    <div class="absolute top-0 right-0 -z-10 pointer-events-none">
      <Splash />
    </div>

    <Header uri={uri} pageData={pageData} availability={availability} />

    <div class="w-full max-w-screen-xl mx-auto px-3 sm:px-4 lg:px-6">
      <Aside uri={uri} pageData={pageData} availability={availability} />

      <main class="pb-8">
        <slot />
      </main>
    </div>

    <div class="flex-1"></div>
    <PromoBanner />
    <Footer />
    <KoFiScript />

    {isDev && <DevIndicator enableAds={enableAds} />}
  </body>
</html>
